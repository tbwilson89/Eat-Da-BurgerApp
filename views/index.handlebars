<div class="container">
  <div class="center">
    <h1>Burgers!</h1>
    <img src="./assets/img/burger.png" alt="">
  </div>
  <div class="burger-display">
    <div class="burger-section">
      <h2>Burgers to be devoured!</h2>
      <div class="card" style='width: 18rem;'>
        <ul class="list-group list-group-flush">
          {{#each burgers}}
          {{#unless DEVOURED}}
          {{> burger/burger-block devoured=false}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="burger-section">
      <h2>Burgers that have been devoured!</h2>
      <div class="card" style='width: 18rem;'>
        <ul class="list-group list-group-flush">
          {{#each burgers}}
          {{#if DEVOURED}}
          {{> burger/burger-block devoured=true}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <br>
  <br>
  <div class="form-container">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input class='form-control' type="text" id="burger" name="name" placeholder='Burger Name'>
      </div>
      <div class="text-center">
        <button type="submit" class='btn btn-primary'>Add Burger</button>
      </div>
      <br>
      <p>Enter a burger you want to eat, then click the "Add Burger" button.</p>
    </form>
  </div>

</div>
